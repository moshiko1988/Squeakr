<h1>POSTS</h1>

<div class="panel panel-primary">
  <div class="panel-body">
    <li class='post-title'>{{model.title}}</li>

  </div>
  <div class="panel-footer">
    <li class='post-body'>{{model.body}}</li>
  </div>

</div>

{{#link-to 'comment-new' model}}Comment Here{{/link-to}}

{{#each model.comments as | comment |}}

{{comment-index
  comment=comment
  delete='delete'
  }}

  <div class="panel-footer">
    <li class='post-body'>{{comment.body}}</li>
  </div>
{{/each}}
{{outlet}}
